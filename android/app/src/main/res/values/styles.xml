<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorPrimaryDark">@color/heavyBlue</item>
        <item name="colorAccent">@color/mintGreen</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColorHint">@color/mintGreen</item>
        <item name="colorAccent">@color/mintGreen</item>
        <item name="android:editTextColor">@color/mintGreen</item>
        <item name="colorControlNormal">@color/mintGreen</item>
        <item name="colorControlActivated">@color/mintGreen</item>
        <item name="colorControlHighlight">@color/mintGreen</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
